                                {{ form_row(form.pseudo, {'attr': {'autocomplete': 'off','placeholder': "nom et prénom "} }) }}
                                </div>
                                <div class="email-address-wrap">
                                {{ form_widget(form.email, {'attr': {'autocomplete': 'off','placeholder': "Email"}}) }}
                                </div>
                            </div>
                            <div class="message-wrap">
                            {{ form_widget(form.Message, {'attr': {'autocomplete': 'off','placeholder': "Email"}}) }}
                            </div>
                            <div class="mg-top30">
                                {{ form_widget(form.submit, {'attr':{'class': 'btn btn-post-comment box-shadow-type1'}}) }}

                            </div>
            {{ form_end(form) }}
