{% trans_default_domain 'FOSUserBundle' %}



<div class="sign_in_up_bg">
	<!-- Signup Start -->
	<div class="container">
		{% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        <div class="alert alert-success">
                             {{ message }}
                        </div>                    
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
		<div class="row justify-content-lg-center justify-content-md-center">
			<div class="col-lg-12">
				<div class="main_logo25" id="logo">
						<a href="{{path('home')}}"><img src="{{asset('asset/img/images/logo/07.png')}}" alt=""></a>
						<a href="{{path('home')}}"><img class="logo-inverse" src="{{asset('asset/img/images/logo/07.png')}}" alt=""></a>
				</div>
			</div>
		
			<div class="col-lg-6 col-md-8">
				<div class="sign_form">
					<h2><label for="username">{{ 'resetting.request.username'|trans }}</label></h2>
                        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
						<div class="ui search focus mt-50">
							<div class="ui left icon input swdh95">
                                <input type="text" id="username" name="username" required="required" placeholder="&nbsp;&nbsp;&nbsp;&nbsp;{{ 'resetting.request.username'|trans }}" />
								{# <input class="prompt srch_explore" type="email" name="emailaddress" value="" id="id_email" required="" maxlength="64" placeholder="Email Address">															 #}
								<i class="uil uil-envelope icon icon2"></i>
							</div>
						</div>
                        <input class="login-btn" type="submit" value="{{ 'resetting.request.submit'|trans }}" />

						{# <button class="login-btn" type="submit">Reset Password</button> #}
					</form>
					<p class="mb-0 mt-30">Retourner <a href="{{ path('fos_user_security_login') }}">Se connecter</a></p>
				</div>
				<div class="sign_footer"><img src="images/sign_logo.png" alt="">© 2020 <strong>psc</strong>. Tous les droits sont réservés.</div>
			</div>				
		</div>				
	</div>	
</div>	