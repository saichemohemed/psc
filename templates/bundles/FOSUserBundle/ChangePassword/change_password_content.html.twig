{% trans_default_domain 'FOSUserBundle' %}

{% include "include/headerDashboard.html.twig" %}


<div class="sign_in_up_bg">
	<!-- Signup Start -->
	<div class="container">
		<div class="row justify-content-lg-center justify-content-md-center">
			<div class="col-lg-12">
				<div class="main_logo25" id="logo">
				</div>
			</div>
		
			<div class="col-lg-6 col-md-8">
				<div class="sign_form">
					<h2><label for="username">Réinitialisation mot de pass</label></h2>
						<div class="ui search focus mt-50">
					{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
							<div class="ui left icon input swdh95">
                                <h3><label for="inputEmail4">{{ 'Change_pass.Current_Password'|trans }}</label></h3>
							</div>

                            <div class="ui left icon input swdh95">
                            
                        	{{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
                            {{ form_errors(form.current_password) }}

							</div>
                            <br><br>
                            <div class="ui left icon input swdh95">
                                <h3><label for="inputEmail4">{{ 'Change_pass.New_Password'|trans }}</label></h3>
							</div>

                            <div class="ui left icon input swdh95">

                        	{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
                          	{{ form_errors(form.plainPassword.first) }}

							</div>
 							<br><br>
                            <div class="ui left icon input swdh95">
                                <h3><label for="inputEmail4">{{ 'Change_pass.Repeat_the_new_password'|trans }}</label></h3>
							</div>

                            <div class="ui left icon input swdh95">

                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
                        {{ form_errors(form.plainPassword.second) }}

							</div>

						</div>
						    <input class="login-btn"  type="submit" value="{{ 'change_password.submit'|trans }}" />
			{{ form_end(form) }}
				</div>
				<div class="sign_footer"><img src="images/sign_logo.png" alt="">© 2020 <strong>psc</strong>. Tous les droits sont réservés.</div>
			</div>				
		</div>				
	</div>	
</div>	