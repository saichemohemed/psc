            </tr>
        {% endblock table_head %}
        </thead>

        <tbody>
        {% block table_body %}

            {% for pay in paiements %}
                <tr>
                    <td style="text-align: center;"> {{pay.id}}</td>
                    <td style="text-align: center;">
                        {% for Langue in pay.Langue %}
                            {{Langue.langue}}
