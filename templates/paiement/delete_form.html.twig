<form method="post" action="{{ path('paiement_delete', {'id': paiement}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ paiement) }}">
    <button class="bt"><i class="fas fa-trash-alt" style="color: #cd3c63;"></i></button>
</form>
